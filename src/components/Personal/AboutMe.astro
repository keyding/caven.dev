---
import BioCard from "../BioCard.astro"

const skillList = ["Senior Frontend Developer", "Freelancer", "Blogger"]
---

<BioCard
  title="About me"
  type="about">
  <div class="relative -mb-4">
    {
      skillList.map((item) => (
        <div class="flex items-center mb-4">
          <div class="i-fluent-emoji-flat:backhand-index-pointing-right w-5 h-5" />
          <div class="font-vr text-base text-slate-900 font-medium ml-4 tracking-wide">{item}</div>
        </div>
      ))
    }
    <div
      class="absolute -right-4 -bottom-2 i-fluent-emoji-flat:desert-island w-36 h-36 opacity-20 transition hidden"
      id="theme-sun">
    </div>
    <div
      class="absolute -right-4 -bottom-3 i-fluent-emoji-flat:beach-with-umbrella w-36 h-36 opacity-20 transition hidden"
      id="theme-sea">
    </div>
    <div
      class="absolute -right-4 -bottom-2 i-fluent-emoji-flat:bicycle w-36 h-36 opacity-20 transition hidden"
      id="theme-forest">
    </div>
    <!-- <div
      class="i-ph:arrow-circle-right w-8 h-8 text-slate-300 absolute -right-0.5 -bottom-0.5 cursor-pointer transition hover:text-slate-900">
    </div> -->
  </div>
</BioCard>
